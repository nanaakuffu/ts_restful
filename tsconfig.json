{
  "compilerOptions": {
    "lib": ["es5", "es2018"],
    "target": "es6",
    "module": "commonjs",
    "moduleResolution": "node",
    "outDir": "./dist",
    "baseUrl": "./src",
    "strict": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "sourceMap": true,
    "esModuleInterop": true
  },
  "include": ["src/**/*.*"],
  "exclude": ["node_modules"]
}

